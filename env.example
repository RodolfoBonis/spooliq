# Application Configuration
APP_ENV=development
APP_PORT=8000

# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/spooliq_db?sslmode=disable
DATABASE_DRIVER=postgres

# Keycloak Configuration
KEYCLOAK_HOST=https://auth.rodolfodebonis.com.br
KEYCLOAK_REALM=spooliq
KEYCLOAK_CLIENT_ID=spooliq
KEYCLOAK_CLIENT_SECRET=your_keycloak_client_secret

# Keycloak Admin (for setup scripts only, DO NOT use in production API)
KEYCLOAK_ADMIN_EMAIL=your_admin@email.com
KEYCLOAK_ADMIN_PASSWORD=your_secure_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# AMQP Configuration
AMQP_CONNECTION=amqp://guest:guest@localhost:5672/

# Sentry Configuration (Optional)
SENTRY_DSN=
SENTRY_RELEASE=spooliq@1.0.0
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_DEBUG=false

# CDN Configuration (rb-cdn)
CDN_BASE_URL=https://rb-cdn.rodolfodebonis.com.br
CDN_API_KEY=your_cdn_api_key
CDN_BUCKET=spooliq

# Asaas Payment Gateway Configuration
ASAAS_API_KEY=your_asaas_api_key
ASAAS_BASE_URL=https://sandbox.asaas.com/api/v3
ASAAS_WEBHOOK_SECRET=your_webhook_secret

# Email Configuration (if implementing email service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@spooliq.com

# Subscription Configuration
SUBSCRIPTION_CHECK_CRON=0 3 * * *  # Run daily at 3 AM
TRIAL_PERIOD_DAYS=14

# Observability Configuration (Optional)
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=spooliq-api

# Initial Platform Company UUID (for setup only)
SPOOLIQ_ORG_UUID=

