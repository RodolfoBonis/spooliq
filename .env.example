# Application Configuration
PORT=8000
ENV=development
SERVICE_ID=spooliq-service

# Database Configuration
DB_DRIVER=postgres# postgres ou sqlite
DB_HOST=localhost
DB_PORT=5432
DB_USER=user
DB_SECRET=password
DB_NAME=spooliq_db

# SQLite Configuration (usado quando DB_DRIVER=sqlite)
DB_SQLITE_PATH=./spooliq.db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0

# Authentication Configuration
CLIENT_ID=your_client_id
CLIENT_SECRET=your_client_secret
REALM=your_realm
KEYCLOAK_HOST=your_keycloak_host

# Build Configuration (for Docker build with private repositories)
GITHUB_TOKEN=your_github_personal_access_token
VERSION=latest

# Optional: Sentry Configuration
SENTRY_DSN=your_sentry_dsn

# Optional: AMQP Configuration
AMQP_CONNECTION=amqp://user:password@localhost:5672/

# OpenTelemetry/SigNoz Configuration - Enhanced (Production Ready)
SIGNOZ_ENABLED=true
OTEL_TRACES_ENABLED=true
OTEL_METRICS_ENABLED=true
OTEL_LOGS_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_EXPORTER_OTLP_INSECURE=true
OTEL_EXPORTER_OTLP_COMPRESSION=gzip
OTEL_SERVICE_NAME=spooliq-api
OTEL_SERVICE_VERSION=1.0.0
OTEL_SERVICE_NAMESPACE=spooliq
OTEL_RESOURCE_ATTRIBUTES=service.name=spooliq-api,service.version=1.0.0,deployment.environment=production

# Observability Features
OTEL_AUTO_HTTP=true
OTEL_AUTO_DATABASE=true
OTEL_AUTO_REDIS=true
OTEL_AUTO_AMQP=true
OTEL_DISTRIBUTED_TRACING=true
OTEL_ERROR_TRACKING=true
OTEL_BUSINESS_METRICS=true
OTEL_PERFORMANCE_MONITOR=true

# Sampling Configuration (Production optimized)
OTEL_TRACES_SAMPLER=parent_based
OTEL_TRACES_SAMPLER_ARG=0.1
OTEL_ADAPTIVE_SAMPLING=true
OTEL_ERROR_SAMPLING_BOOST=5.0

# Performance Optimization
OTEL_MAX_MEMORY_USAGE=134217728
OTEL_MEMORY_LIMIT_PERCENT=10
OTEL_MAX_CPU_USAGE=0.1
OTEL_WORKER_POOL_SIZE=4
OTEL_MAX_BATCH_SIZE=1000
OTEL_FLUSH_TIMEOUT=5s

# Metrics Configuration
OTEL_METRIC_EXPORT_INTERVAL=30s
OTEL_RUNTIME_METRIC_INTERVAL=10s
OTEL_METRICS_HTTP_ENABLED=true
OTEL_METRICS_DATABASE_ENABLED=true
OTEL_METRICS_REDIS_ENABLED=true
OTEL_METRICS_AMQP_ENABLED=true
OTEL_METRICS_RUNTIME_ENABLED=true
OTEL_METRICS_BUSINESS_ENABLED=true

# Logs Configuration
OTEL_LOGS_TRACE_CORRELATION=true
OTEL_LOGS_SPAN_CORRELATION=true
OTEL_LOGS_EXPORT_LEVELS=info,warn,error
OTEL_LOGS_STRUCTURED=true

# Kubernetes/Container Attributes (auto-detected if available)
# POD_NAME=
# POD_IP=
# POD_NAMESPACE=
# NODE_NAME=
# K8S_CLUSTER_NAME=
# CONTAINER_NAME=
# CONTAINER_ID=

# Debug Configuration (Production settings)
OTEL_DEBUG_MODE=false
OTEL_DRY_RUN=false

